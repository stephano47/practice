                            System.out.println("The book you entered is " + books[i].getTitle() +"."+
                                    " Is this the book you wish to checkout?\n"+
                                    "- Yes\n" +
                                    "- No");
                            String checkoutChoice = scanner.nextLine();
                        }
                        break;
                    case 2:
